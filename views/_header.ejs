<!doctype html>
<html lang="en">
  <head>
    
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    
    <title>Placement-Cell | <%=title%></title>

    <link rel="canonical" href="https://getbootstrap.com/docs/5.1/examples/sign-in/">
    
    <!-- jquery css plugin for chosen -->
    <link rel="stylesheet" href="/css/chosen.css">

    <!-- Custom styles for this template -->
    <link rel="stylesheet" href="/css/header.css">
    <%- style %>
  </head>
  <body>

    <!-- Navbar -->
    <header class=" navbar navbar-light bg-light navbar-default shadow p-3 fixed-header bg-white rounded">
      <!-- Logo and Name -->
      <div class="container-fluid">
        <a class="navbar-brand text-dark " href="#" >
          <i class="fa-2x fa-solid fa-arrow-up-right-dots"></i>
          <span class="h2 mx-2  d-none d-lg-inline">
            Codelada | Placement-Cell
          </span>
        </a>
        
        <!-- Navigation menu  -->
        <% if(locals.user){ %>
          <!-- Home and signout btn if user is logged in -->
          <div class="d-flex">
            <a href="/">
              <button type="button " id="add-student">Add Student</button>
            </a>
            <a href="/posts/company">
              <button type="button" id="create-interview">Create Interview</button>
            </a>
            <a href="/users/signout">
              <button type="button" id="sign-out">Sign-out</button>
            </a>
          </div>
        <% }else{ %>
          <!-- Signin and Sign Out btns if user is not logged in -->
          <div class="d-flex">
                <a href="/users/signin">
                  <button type="button" class="" id="sign-in">Sign-in</button>
                </a>
                <a href="/users/signup">
                  <button type="button" class="" id="sign-up">Sign-up</button>
                </a>
          </div>
        <% } %>
      </div>
    </header>