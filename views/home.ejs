<link rel="stylesheet" href="/css/home.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.3/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css">



<div class=" row">
  <!-- Student Form section  -->
  <section class="col-md-4 border border-top-0 border-left-0 " style="background: #eee; background-image: url(/images/bg-form.png);">
    <!-- Student Form Heading -->
    <div class="d-flex align-items-center justify-content-center h3 py-5 ">
      Student Form
    </div>
    <div class="container-fluid ">
      <form action="/posts/create-student" method="post">
          <!-- Contains Student Id -->
          <div class="row text-white my-3">
              <div class="col-sm-12">
                  <label for="studentId"></label>
                  <input type="text" class="form-control" id="studentId" name="studentId" placeholder="Student Id (Batch_No - RollNo)" required>
              </div>
          </div>
          <!-- Contains Student Name -->
          <div class="row text-white my-3">
              <div class="col-sm-12">
                  <label for="studentName"></label>
                  <input type="text" class="form-control" id="studentName" name="studentName" placeholder="Student Name" required>
              </div>
          </div>
          <!-- Contains College Name -->
          <div class="row text-white my-3">
              <div class="col-sm-12">
                  <label for="collegeName"></label>
                  <input type="text" class="form-control" id="collegeName" name="collegeName" placeholder="College Name" required>
              </div>
          </div>
          <!-- Contains Test Score -->
          <div class="row text-dark my-2">
              <div class="col-sm-auto">
                  <label for="dsa">DSA Score</label>
                  <select class="custom-select form-select form-control my-2" name="dsa" id="dsa" required>
                      <option selected value="0">0</option>
                      <option value="1">1</option>
                      <option value="2">2</option>
                      <option value="3">3</option>
                      <option value="4">4</option>
                      <option value="5">5</option>
                      <option value="6">6</option>
                      <option value="7">7</option>
                      <option value="8">8</option>
                      <option value="9">9</option>
                      <option value="10">10</option>
                  </select>
              </div>
              <div class="col-sm-auto">
                  <label for="webd">WebD Score</label>
                  <select class="custom-select form-select form-control my-2" id="webd" name="webd" required>
                      <option selected value="0">0</option>
                      <option value="1">1</option>
                      <option value="2">2</option>
                      <option value="3">3</option>
                      <option value="4">4</option>
                      <option value="5">5</option>
                      <option value="6">6</option>
                      <option value="7">7</option>
                      <option value="8">8</option>
                      <option value="9">9</option>
                      <option value="10">10</option>
                  </select>
              </div>
              <div class="col-sm-auto">
                  <label for="react">React Score</label>
                  <select class="custom-select form-select form-control my-2" name="react" id="react" required>
                      <option selected value="0">0</option>
                      <option value="1">1</option>
                      <option value="2">2</option>
                      <option value="3">3</option>
                      <option value="4">4</option>
                      <option value="5">5</option>
                      <option value="6">6</option>
                      <option value="7">7</option>
                      <option value="8">8</option>
                      <option value="9">9</option>
                      <option value="10">10</option>
                  </select>
              </div>
              <!-- Contains Status of the student -->
              <div class="col-sm-auto">
                  <label for="status">Status</label>
                  <select class="custom-select form-select form-control my-2" name="status" id="status" required>
                      <option selected value="Placed">Placed</option>
                      <option value="Not Placed">Not Placed</option>
                  </select>
              </div>
          </div> 
          <div class="row d-flex justify-content-center">
              <button type="submit" class="col-auto btn btn-primary m-3">Submit</button>
          </div>
      </form>
    </div>
  </section>
  <!-- Student data table -->
  <section class="col-md-8" style="background: #f8f9fa; background-image: url(/images/bg-table.png);">
    <div class="table-responsive-md min-vh-100">
      <div class="h3 p-3 d-flex align-items-center justify-content-center">
          Student Details
      </div>
      <div class="d-flex justify-content-end mx-3 mb-2">
        <a href="/table">
          <button type="button" class="btn btn-sm btn-outline-primary me-2">
            Download
            <i class="fa-solid fa-file-arrow-down"></i>
          </button>
        </a>
      </div>
      <table id="example" class="table table-hover ">
        <thead >
          <tr>
            <th scope="col-auto">S.No</th>
            <th scope="col-auto">Student Name</th>
            <th scope="col-auto">College Name</th>
            <th scope="col-auto">DSA</th>
            <th scope="col-auto">W Dev.</th>
            <th scope="col-auto">React</th>
            <th scope="col-auto">Status</th>
          </tr>
        </thead>
        <tbody>
          <% student.forEach(function(element, i){ %>
            <tr>
              <th scope="row"><%= i+1 %></th>
              <td><%= element.studentName %></td>
              <td><%= element.collegeName %></td>
              <td><%= element.dsa %></td>
              <td><%= element.webd %></td>
              <td><%= element.react %></td>
              <td><%= element.status %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </section>
</div>

<!-- Styles the home and signout btn  -->
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
<script src="/js/home.js"></script>